{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "demo",
    "dist"
  ]
}